<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1_create_initial_user_table" author="Rohit Kumar">
        <createTable tableName="tbd_users">
            <column name="sub" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="picture" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="profile_complete" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="is_email_verified" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="last_login" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2_create_initial_roles_table" author="Rohit Kumar">
        <createTable tableName="tbd_roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>

        <insert tableName="tbd_roles">
            <column name="name" value="ROLE_CUSTOMER"/>
        </insert>
        <insert tableName="tbd_roles">
            <column name="name" value="ROLE_TENANT"/>
        </insert>
        <insert tableName="tbd_roles">
            <column name="name" value="ROLE_ADMIN"/>
        </insert>
    </changeSet>

    <changeSet id="3_create_users_and_roles_mapping" author="Rohit Kumar">
        <createTable tableName="tbd_user_roles">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_sub" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="fk_user" referencedTableName="tbd_users"
                             referencedColumnNames="sub"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_role" referencedTableName="tbd_roles"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>